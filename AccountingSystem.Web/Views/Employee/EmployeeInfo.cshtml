@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "EmployeeInfo";
    var userId = Context.Session.GetInt32("UserID");
    var accessRight = Context.Session.GetString("AccessRight");

    var accessRights = new string[0];

    if (string.IsNullOrEmpty(accessRight))
    {
                        <script type="text/javascript">
                            window.location.href = '@Url.Action("Index", "Home")';
                        </script>
    }
    else
    {
        accessRights = accessRight.Split(',');
    }
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>
    <style>
        .disabled-div {
            pointer-events: none;
            opacity: 0.6;
        }
    </style>
</head>

<div class="card">
    <div class="card-body" style="background-color:whitesmoke;font-size:14px">
        <div ng-app="myApp">
            <div ng-controller="myController">
                <div class="row">
                    <div class="col-sm-3">
                        <h4>Employee Information</h4>
                    </div>
                    <div class="col-sm-9">
                        <div>
                            <button class="btn btn-info btn-sm" ng-click="basicInfoButton()">Basic Info</button>
                            <button class="btn btn-info ms-3 btn-sm" ng-click="employmentInfoButton()">Employment Info</button>
                            <button class="btn btn-info ms-3 btn-sm" ng-click="salaryInfoButton()">Salary Info</button>
                            <button class="btn btn-info ms-3 btn-sm" ng-click="bankAndTaxInfoButton()">Bank and Tax Info</button>
