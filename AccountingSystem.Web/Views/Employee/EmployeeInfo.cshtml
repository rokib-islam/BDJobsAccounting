                            <div class="row mb-2">
                                <label class="col-sm-4">PF Start Date</label>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control form-control-sm" ng-model="pfStartDate" ng-disabled="disabledPfStartDate" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row mb-2">
